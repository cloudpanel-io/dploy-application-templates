project:
  git_repository: '{git_repository}'
  deploy:
    directory: '{deploy_directory}'
    shared_directories:
      - ''
    before_commands: # Before symlink switch
      #- 'cd {release_directory} && php8.2 script.php'
      - '/usr/bin/find {release_directory} -type d -exec chmod 0770 {} \; && /usr/bin/find {release_directory} -type f -exec chmod 660 {} \;'
    after_commands: # After symlink switch
      - 'sudo systemctl reload php8.2-fpm'